{
	"name": "jmap-admin",
	"version": "0.4.6",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:watch": "vitest test/route test/lib",
		"test:integration": "vitest --run --threads false test/integration",
		"test": "vitest --run",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"clean": "rm -rf .svelte-kit build && npm cache clean --force",
		"release": "npm run format && release-it --only-version"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.25.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^4.0.3",
		"@types/formidable": "^2.0.5",
		"@types/lodash-es": "^4.17.6",
		"@types/luxon": "^3.3.2",
		"@types/mailparser": "^3.4.0",
		"@types/smtp-server": "^3.5.7",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"dotenv": "^16.0.3",
		"eslint": "8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.34.0",
		"eslint-plugin-vitest": "^0.3.2",
		"husky": "^8.0.2",
		"jsdom": "^22.1.0",
		"lint-staged": "^13.1.0",
		"lodash-es": "^4.17.21",
		"mailparser": "^3.6.3",
		"msw": "^1.2.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"release-it": "^16.2.1",
		"sass": "^1.56.1",
		"sqlite3": "^5.1.4",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"svelte-kit-test-helpers": "^1.0.1",
		"svelte-preprocess": "^5.0.4",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vitest": "^0.34"
	},
	"dependencies": {
		"@iroco/ui": "^0.62.0",
		"jose": "^4.15.2",
		"luxon": "^3.4.3",
		"pino": "^8.8.0",
		"pino-pretty": "^9.1.1",
		"svelte-awesome": "^3.0.1",
		"svelte-i18n": "<3.7.3",
		"svelte-speedometer": "^1.1.0"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write -u"
		],
		"!**/*.{js,ts,jsx,tsx}": "prettier --write -u"
	},
	"release-it": {
		"npm": {
			"publish": false
		},
		"github": {
			"release": true
		},
		"git": {
			"commit": true
		}
	},
	"type": "module"
}
