{
	"name": "iroco-admin",
	"version": "0.1.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"smtp": "node test/smtpServer.js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:watch": "vitest test/route test/lib",
		"test:integration": "vitest --run --threads false test/integration",
		"test": "vitest --run",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"clean": "rm -rf .svelte-kit build && npm cache clean --force",
		"db:dev": "NODE_ENV=dev knex --knexfile src/db/knexfile.mjs migrate:latest && NODE_ENV=dev knex --knexfile src/db/knexfile.mjs seed:run",
		"db:preprod": "NODE_ENV=preprod knex --knexfile src/db/knexfile.mjs migrate:latest && NODE_ENV=preprod knex --knexfile src/db/knexfile.mjs seed:run",
		"db:test": "NODE_ENV=test knex --knexfile src/db/knexfile.mjs migrate:latest && NODE_ENV=test knex --knexfile src/db/knexfile.mjs seed:run"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0",
		"@sveltejs/adapter-node": "1.1.0",
		"@sveltejs/kit": "1.0.7",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@types/lodash-es": "^4.17.6",
		"@types/mailparser": "^3.4.0",
		"@types/smtp-server": "^3.5.7",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"csv-parse": "^5.5.0",
		"dotenv": "^16.0.3",
		"eslint": "8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"eslint-plugin-vitest": "^0.0.20",
		"husky": "^8.0.2",
		"jsdom": "^20.0.3",
		"lint-staged": "^13.1.0",
		"lodash-es": "^4.17.21",
		"mailparser": "^3.6.3",
		"msw": "^0.49.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.56.1",
		"smtp-server": "^3.11.0",
		"sqlite3": "^5.1.4",
		"svelte": "^3.53.1",
		"svelte-check": "^2.9.2",
		"svelte-kit-test-helpers": "^1.0.1",
		"svelte-preprocess": "^4.10.7",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.5",
		"vite": "^4.0.0",
		"vitest": "^0.28.4"
	},
	"dependencies": {
		"@iroco/ui": "^0.52.2",
		"dayjs": "^1.11.7",
		"jose": "^4.11.1",
		"knex": "^2.3.0",
		"nodemailer": "^6.8.0",
		"pg": "^8.8.0",
		"pg-native": "^3.0.1",
		"pino": "^8.8.0",
		"pino-pretty": "^9.1.1",
		"sha512-crypt-ts": "^0.1.27",
		"svelte-awesome": "^3.0.1",
		"svelte-i18n": "^3.6"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write -u"
		],
		"!**/*.{js,ts,jsx,tsx}": "prettier --write -u"
	},
	"type": "module"
}
